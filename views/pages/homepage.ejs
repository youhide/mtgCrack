<div class="col-md-12">
  <div class="row">
    <form class="search-form" id="searchForm">
        <div class="input-group">
            <div class="input-group-addon"><span><i class="glyphicon glyphicon-search"></i></span></div>
            <input type="text" id="searchInput" placeholder="Black Lotus" class="form-control" value="<%=searchInput%>" />
            <div class="input-group-btn">
                <button id="searchButton" class="btn btn-default" type="button">Search</button>
            </div>
        </div>
    </form>
  </div>
  <div class="row" id="cardsList">
    <% if (typeof cards == 'object' && cards) { %>
      <% cards.forEach( function( card ){ %>
        <div class="col-md-3 col-sm-6">
          <div class="box">
            <% if (card['imageUrl']) { %>
              <img class="card-img img-responsive center-block" src="<%=card['imageUrl']%>" alt="Card image cap">
            <% } else { %>
              <img class="card-img img-responsive center-block" src="https://upload.wikimedia.org/wikipedia/commons/a/ac/No_image_available.svg" alt="Card image cap">
            <% } %>
            <div class="cardInfo-block">
              <h4 class="card-title"><%=card['name']%></h4>
              <p class="card-text">Rarity: <%=card['rarity']%></p>
              <p class="card-text">Set: <%=card['setName']%></p>
              <p class="card-text">Type: <%=card['type']%></p>
              <% if (card['text']) { %>
                <p class="card-text"><small class="text-muted">Text: <%=card['text']%></small></p>
              <% } else { %>
                <p class="card-text"><small class="text-muted">Text: None</small></p>
              <% } %>
            </div>
          </div>
        </div>
      <% }); %>
    <% } %>
  </div>
</div>
